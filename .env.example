# HushMCP Email Suite - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys and credentials

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================

# Mailjet API Configuration (Required for email sending)
# Get your API keys from: https://app.mailjet.com/account/apikeys
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_API_SECRET=your_mailjet_secret_key_here

# ==============================================
# AI SERVICE CONFIGURATION  
# ==============================================

# Google Gemini API (Required for AI content generation)
# Get your API key from: https://ai.google.dev/
GOOGLE_API_KEY=your_google_gemini_api_key_here

# OpenAI API (Required for AddToCalendar agent)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================
# HUSHH MCP FRAMEWORK CONFIGURATION
# ==============================================

# Secret key for HMAC signing (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_for_hmac_signing_at_least_32_chars

# Vault encryption key (64-character hex string for AES-256)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
VAULT_ENCRYPTION_KEY=your_64_character_hex_string_for_aes256_encryption_here

# Agent and token prefixes
AGENT_ID_PREFIX=agent_
USER_ID_PREFIX=user_
CONSENT_TOKEN_PREFIX=HCT
TRUST_LINK_PREFIX=HTL

# ==============================================
# TOKEN EXPIRY CONFIGURATION
# ==============================================

# Default expiry times (in milliseconds)
DEFAULT_CONSENT_TOKEN_EXPIRY_MS=604800000   # 7 days
DEFAULT_TRUST_LINK_EXPIRY_MS=2592000000     # 30 days

# ==============================================
# VAULT ENCRYPTION SETTINGS
# ==============================================

VAULT_ENCRYPTION_ALGORITHM=aes-256-gcm
VAULT_KEY_DERIVATION=pbkdf2

# ==============================================
# API SERVER CONFIGURATION
# ==============================================

API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Environment type (development, staging, production)
ENVIRONMENT=development

# ==============================================
# OPTIONAL: EXTERNAL INTEGRATIONS
# ==============================================

# Google Calendar API (for AddToCalendar agent)
# GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json

# Additional email service providers (if needed)
# SENDGRID_API_KEY=your_sendgrid_api_key
# AWS_SES_ACCESS_KEY=your_aws_ses_access_key
# AWS_SES_SECRET_KEY=your_aws_ses_secret_key

# ==============================================
# DEVELOPMENT/TESTING SETTINGS
# ==============================================

# Enable hackathon mode for development
HUSHH_HACKATHON=enabled

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Test mode settings
TEST_MODE=false
SKIP_EMAIL_SENDING=false
